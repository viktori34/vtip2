def BMI (V, R):
    """Функция рассчитывает индекс массы тела
    и дает расшифровку 
    """
    B = V/(R**2)
    return B
V = float(input ('Введите массу тела:'))
R = float(input ('Введите рост в метрах:'))
B = BMI(V, R)
print('Индекс массы тела:', B)
if B<18.5:
    print ('Ниже нормального веса.')
elif 18.5<= B <25:
    print ('Нормальный вес.')
elif 25<= B <30:
    print ('Избыточный вес.')
elif 30<= B <35:
    print ('Ожирение 1 степени.')
elif 35<= B <40:
    print ('Ожирение 2 степени.')
elif B >= 40:
    print ('Ожирение 3 степени.')
